
<div class="signup-wrapper">
  <%= link_to root_path do %>
    <div class="easy_trip_logo"></div>
  <% end %>
  <div class="feature-left"></div>
  <div class="main-panel-right">
    <div class="main-panel-right-table">
      <div class="main-panel-sign-in ">
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'button_signin' %>
      </div>
        <div class="main-panel-right-table-cell-content_form">
          <div class="container">
            <h2>Forgot your password ?</h2>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true,input_html: { class: 'form__input' } %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Send me reset password instructions", class: 'button_signup_password'%>
              </div>
            <% end %>
              </div>
          </div>
      </div>
    </div>
</div>


