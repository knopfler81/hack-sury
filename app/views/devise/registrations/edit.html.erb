
<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <h3>Profile infos</h3>

      <%= f.input :nickname, label: "Choose a nickname", required: true %>
      <%= f.input :bio, label: "Write a bio", hint: "Write a little about you. Where have you been travelling? What are you looking for by travelling?", required: true %>
      <%= f.input :birth_date, required: true, start_year: 1930, end_year: Date.today.year %>
      <%= f.input :driving_licence, as: :boolean, required: true  %>
      <%= f.input :avatar, as: :attachinary %>
      <hr>
      <h3>Account infos</h3>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :first_name, required: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :email, required: true %>
      <% if current_user.signed_without_oauth? %>
            <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
            <%= f.input :password_confirmation, required: false %>

      <% end %>


    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>
  <hr>
  <p><strong>Cancel my account</strong></p>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

</div>
