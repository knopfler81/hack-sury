<div class="signup-wrapper">

  <%= link_to root_path do %>
    <div class="easy_trip_logo"></div>
  <% end %>


  <div class="feature-left">
  </div>

  <div class="main-panel-right">
    <div class="main-panel-right-table">
      <div class="main-panel-sign-in">
        <%= link_to "Sign in", new_session_path(resource_name), class: 'button_signin' %>
      </div>

        <div class="main-panel-right-table-cell-content_form">
          <div class="container">
            <h2>Sign up</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div>
                <%= f.input :email, required: true, input_html: { class: 'form__input' } %>
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form__input' } %>
                <%= f.input :password_confirmation, required: true, input_html: { class: 'form__input' }%>
              </div>
              <div class="button-signup-div">
                <%= f.submit "Sign up", :class => 'button_signup' %>

                <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: 'button_signup_facebook' %>
              </div>
            <% end %>

          </div>
      </div>
    </div>
  </div>

</div>
