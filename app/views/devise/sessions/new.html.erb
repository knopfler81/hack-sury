

<div class="signup-wrapper">
  <%= link_to root_path do %>
    <div class="easy_trip_logo"></div>
  <% end %>
  <div class="feature-left"></div>
  <div class="main-panel-right">
    <div class="main-panel-right-table">
      <div class="main-panel-sign-in ">
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'button_signin' %>
      </div>
        <div class="main-panel-right-table-cell-content_form">
          <div class="container">
            <h2>Log in</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div>
                <%= f.input :email, required: true, input_html: { class: 'form__input' } %>
                <%= f.input :password, required: false, input_html: { class: 'form__input' } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div>
                <%= f.submit "Log in", :class => 'button_signup'%>
                <%= link_to "My Password ? ", new_password_path(resource_name), class: 'button_signup_password' %>
                <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: 'button_signup_facebook' %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

